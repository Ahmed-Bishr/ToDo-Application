<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">#254875</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="floatingActionButtonStyle">@style/fab_style</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <item name="bar_color" type="color">#141922</item>

    <!-- Splash Activity theme. -->
    <style name="Base.Theme.ToDo.splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black_blue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>



    <style name="fab_rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="background">@drawable/button_bg</item>
    </style>

    <style name="fab_style" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/fab_rounded</item>
    </style>

    <style name="MyBottomNavigationView">

        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:itemBackground">@null</item>
        <item name="itemBackground">@null</item>

    </style>

</resources>